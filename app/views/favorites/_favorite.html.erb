
	<% if post.favorited_by?(current_user) %>
			<%= link_to unfav_path(post.id), method: :delete, remote: true do %>
				<i class="fa fa-heart unfav-btn"></i>
			<% end %>
	<% else %>
			<%= link_to fav_path(post.id), method: :post, remote: true do %>
				<i class="fa fa-heart fav-btn"></i>
			<% end %>
	<% end %>
