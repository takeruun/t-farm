<div class="main post-new-wrapper">
	<div class="container">
		<h2>新規投稿ページ</h2>
		<%= form_for(@post, url:{controller:'posts', action:'create'}) do |f|%>
		<div class="form">
			<div class="post-form-body">
				<div class="title-form">
					<h3>タイトル</h3>
					<%= f.text_field :title, class:"input title" %>
				</div>
				<div class="image-form">
					<h3>写真を登録</h3>
					<p class="preview"></p>
					<%= f.file_field :image, class:"input image" %>
				</div>
				<div class="comment-form">
					<h3>一言</h3>
					<%= f.text_area :a_word, class:"input comment", rows:"4" %>
				</div>
				<div class="detail-form">
					<h3>詳細</h3>
					<table class="detail-form-table">
						<tr><th>生産地</th><td><%= f.select :from, 
						[["選択してください",""],
						 "北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県",
						 "茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県",
						 "新潟県","富山県","石川県","福井県","山梨県","長野県",
						 "岐阜県","静岡県","愛知県","三重県",
						 "滋賀県","京都府","大阪府","兵庫県","奈良県","和歌山県",
						 "鳥取県","島根県","岡山県","広島県","山口県",
						 "徳島県","香川県","愛媛県","高知県",
						 "福岡県","佐賀県","長崎県","熊本県","大分県","宮崎県","鹿児島県",
						 "沖縄県"], {} ,{class:"input from"} %></td></tr>
						<tr><th>収穫量</th><td><%= f.text_field :amount, class:"input amount" %></td></tr>
					</table>
				</div>
				<div class="submit-btn-form">
					<%= f.submit '投稿' %>
				</div>
			</div>
		</div>
		<% end %>
	</div>
</div>

