<div class="post-show-wrapper">
	<div class="container">
		<div class="post-item">
			<div class="post-user-info">
				<img alt="投稿者写真" src= <%= "/user_images/#{@user.image_name}" %> >
				<%= link_to @user.name,'/',class:"user-name"%>
			</div>
			<div class="post-content">
				<h2 class="post-title">商品タイトル</h2>
				<p class="fav-count"></p>
				<img alt=" " src= <%= "/post_images/#{@post.image_name}" %>>
				<p class="post-comment"><%= @post.comment %></p>
				<p class="post-time"><%= @post.created_at.strftime('%Y年%m月%d日 %H:%M') %></p>
			</div>
			<div class="post-detail">
				<h2>商品詳細</h2>
				<table class="post-detail-table">
					<tr><th>生産地</th><td>〜産</td></tr>
					<tr><th>収穫量</th><td>40g</td></tr>
					<tr><th>状態</th><td>多々傷あり</td></tr>
					<tr><th>価格</th><td>円（税込）</td></tr>
					<tr><th>送料</th><td>込み</td></tr>
				</table>
			</div>
			<div class="clear"></div>
		</div>	
	</div>
</div>