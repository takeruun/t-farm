<div class="main post-show-wrapper">
	<div class="container">
		<div class="post-item">
			<div class="post-user-info">
				<img alt="投稿者写真" src= <%= @user.image.to_s %> >
				<%= link_to @user.name,user_path%>
			</div>
			<div class="post-content">
				<h3 class="post-title"><%= @post.title %></h3>
				<p class="fav-count"></p>
				<%= image_tag @post.image.to_s %>
				<p class="post-comment"><%= @post.comment %></p>
				<p class="post-time"><%= @post.created_at.strftime('%Y年%m月%d日 %H:%M') %></p>
			</div>
			<div class="post-detail">
				<h3>商品詳細</h3>
				<table class="post-detail-table">
					<tr><th>生産地</th><td><%= @post.from %></td></tr>
					<tr><th>収穫量</th><td><%= @post.amount %></td></tr>
				</table>
			</div>
			<% if user_signed_in? && current_user.id == @user.id %>
					<%= link_to "編集",edit_post_path %>
			<% end %>
			<div class="clear"></div>
		</div>	
	</div>
</div>